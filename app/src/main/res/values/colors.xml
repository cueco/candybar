<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Blueish #1A73E9
        Dark #1366D3
        Accent #6E3AFF
    -->

    <color name="colorPrimary">#FFF</color>
    <color name="colorPrimaryDark">#FFF</color>
    <color name="colorAccent">#1BB96F</color>

    <color name="darkColorPrimary">#222222</color>
    <color name="darkColorPrimaryDark">@color/darkColorPrimary</color>
    <color name="darkColorAccent">@color/colorAccent</color>

    <!-- Shortcut Icon -->
    <color name="shortcutIconForeground">#FFF</color>
    <color name="shortcutIconBackground">#26C484</color>

    <!-- Navigation Bar
    * Must be solid color, no alpha -->
    <color name="navigationBar">#1A73E9</color>
    <color name="navigationBarDark">@color/darkColorPrimary</color>

    <!-- Splash Screen -->
    <color name="splashColor">#FFFFFF</color>

    <!-- Navigation View -->
    <color name="navigationViewHeaderBackground">#00000000</color>
    <color name="navigationViewHeaderBackgroundDark">#00000000</color>
    <color name="navigationViewTitle">#FFFFFF</color>
    <color name="navigationViewTitleBack">#33000000</color>

    <color name="navigationViewText">#484848</color>
    <color name="navigationViewTextDark">#FFFFFF</color>
    <color name="navigationViewTextSelected">#1BB96F</color>
    <color name="navigationViewTextSelectedDark">@color/navigationViewTextSelected</color>
    <color name="navigationViewSelectedBackground">#2A1BB96F</color>
    <color name="navigationViewSelectedBackgroundDark">@color/navigationViewSelectedBackground
    </color>
    <color name="navigationViewRippleColor">#25000000</color>

    <!-- Swipe Refresh -->
    <color name="swipeRefresh">@color/colorAccent</color>

    <!-- Toolbar -->
    <color name="toolbarIcon">#616161</color>
    <color name="toolbarIconDark">#FFFFFFFF</color>

    <!-- Tab -->
    <color name="tabIndicator">@color/tabTextSelected</color>
    <color name="tabIndicatorDark">@color/tabTextSelectedDark</color>
    <color name="tabText">#BDBDBD</color>
    <color name="tabTextDark">#616161</color>
    <color name="tabTextSelected">#757575</color>
    <color name="tabTextSelectedDark">#BDBDBD</color>

    <!-- Card -->
    <color name="cardBackground">#FFFFFF</color>
    <color name="cardBackgroundDark">#2C2C2C</color>
    <color name="cardStroke">#11000000</color>
    <color name="cardStrokeDark">#11000000</color>

    <!-- Ripple -->
    <color name="rippleColor">@color/navigationViewTextSelected</color>
    <color name="rippleColorDark">@color/rippleColor</color>
    <color name="rippleAccent">@color/colorAccent</color>
    <color name="rippleAccentDark">@color/rippleAccent</color>

    <!-- Attributes -->
    <color name="mainBackground">#FFFFFF</color>
    <color name="mainBackgroundDark">#222222</color>
    <color name="primaryText">#484848</color>
    <color name="primaryTextDark">#FFFFFF</color>
    <color name="secondaryText">#777777</color>
    <color name="secondaryTextDark">#ABABAB</color>

    <color name="dividerList">@color/cardBackground</color>
    <color name="dividerListDark">@color/cardBackgroundDark</color>

    <!-- Wallpaper Preview -->
    <color name="wallpaperStatusBar">@color/wallpaperToolbar</color>
    <color name="wallpaperToolbar">#66000000</color>

</resources>
